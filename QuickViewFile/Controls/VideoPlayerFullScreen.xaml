<Window x:Class="QuickViewFile.Controls.VideoPlayerFullScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickViewFile.Controls"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Maximized"
        KeyDown="Window_KeyDown"
        Title="VideoPlayerFullScreen" Height="1080" Width="1920">
    <Window.CommandBindings>
        <CommandBinding Command="MediaCommands.Play" CanExecute="Play_CanExecute" Executed="Play_Executed" />
        <CommandBinding Command="MediaCommands.Pause" CanExecute="Pause_CanExecute" Executed="Pause_Executed" />
        <CommandBinding Command="MediaCommands.Stop" CanExecute="Stop_CanExecute" Executed="Stop_Executed" />
    </Window.CommandBindings>
    <Grid KeyDown="videoPlayer_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <local:ZoomableMediaElement x:Name="videoFullScreenPlayer" LoadedBehavior="Manual" Stretch="None" Height="1080"/>

        <StatusBar Grid.Row="1" Height="25">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <Button Name="PlayButton" Command="MediaCommands.Play" Focusable="False">
                    <Image Source="/Controls/Resources/play.png" Stretch="Uniform"/>
                </Button>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <Button Name="PauseButton" Command="MediaCommands.Pause" Focusable="False">
                    <Image Source="/Controls/Resources/pause.png" Stretch="Uniform"/>
                </Button>
            </StatusBarItem>
            <StatusBarItem Grid.Column="2">
                <Button Name="StopButton" Command="MediaCommands.Stop" Focusable="False">
                    <Image Source="/Controls/Resources/stop.png" Stretch="Uniform"/>
                </Button>
            </StatusBarItem>
            <StatusBarItem Grid.Column="3">
                <TextBlock Name="lblProgressStatus">00:00:00</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="4">
                <TextBlock Name="fullTime">00:00:00</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="5" HorizontalContentAlignment="Stretch" Height="15" Background="#FFF6D70F">
                <Slider Name="sliProgress" Focusable="False" Thumb.DragStarted="sliProgress_DragStarted"  Thumb.DragCompleted="sliProgress_DragCompleted" ValueChanged="sliProgress_ValueChanged" IsSnapToTickEnabled="True" IsMoveToPointEnabled="True" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="6">
                <ProgressBar Name="pbVolume" Width="50" Height="12" Maximum="1" Value="{Binding ElementName=videoFullScreenPlayer, Path=Volume}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
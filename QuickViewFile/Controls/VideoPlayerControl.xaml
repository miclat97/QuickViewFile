<UserControl x:Class="QuickViewFile.Controls.VideoPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickViewFile.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.CommandBindings>
        <CommandBinding Command="MediaCommands.Play" CanExecute="Play_CanExecute" Executed="Play_Executed" />
        <CommandBinding Command="MediaCommands.Pause" CanExecute="Pause_CanExecute" Executed="Pause_Executed" />
        <CommandBinding Command="MediaCommands.Stop" CanExecute="Stop_CanExecute" Executed="Stop_Executed" />
    </UserControl.CommandBindings>
    <Grid KeyDown="videoPlayer_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <local:ZoomableMediaElement x:Name="videoInWindowPlayer" LoadedBehavior="Manual" />
        </Grid>

        <StatusBar Grid.Row="1" Height="Auto">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <Button Name="PlayButton" Command="MediaCommands.Play" Focusable="False">
                    <TextBlock Text="⏵︎" FontSize="16" FontWeight="Bold" />
                </Button>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <Button Name="PauseButton" Command="MediaCommands.Pause" Focusable="False">
                    <TextBlock Text="❚❚" FontSize="16" FontWeight="Bold" />
                </Button>
            </StatusBarItem>
            <StatusBarItem Grid.Column="2">
                <Button Name="StopButton" Command="MediaCommands.Stop" Focusable="False">
                    <TextBlock Text="⏹" FontSize="16" FontWeight="Bold" />
                </Button>
            </StatusBarItem>
            <StatusBarItem Grid.Column="3">
                <TextBlock Name="lblProgressStatus" FontSize="16" FontWeight="Bold">00:00:00</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="4">
                <TextBlock Name="fullTime" FontSize="16" FontWeight="Bold">00:00:00</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="5" HorizontalContentAlignment="Stretch" Height="Auto">
                <Slider Name="sliProgress" Focusable="False" Thumb.DragStarted="sliProgress_DragStarted"  Thumb.DragCompleted="sliProgress_DragCompleted" ValueChanged="sliProgress_ValueChanged" IsSnapToTickEnabled="True" IsMoveToPointEnabled="True" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="6">
                <ProgressBar Name="pbVolume" Width="50" Height="12" Foreground="LightGreen" Maximum="1" Value="{Binding ElementName=videoInWindowPlayer, Path=Volume}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>

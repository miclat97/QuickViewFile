<Window x:Class="QuickViewFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickViewFile.Controls"
        xmlns:helpers="clr-namespace:QuickViewFile.Helpers"
        xmlns:viewmodel="clr-namespace:QuickViewFile.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:FilesListViewModel}"
        xmlns:uc="clr-namespace:QuickViewFile.Controls"
        mc:Ignorable="d"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        KeyDown="AppWindow_KeyDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        FocusManager.FocusedElement="{Binding ElementName=FilesListView}"
        Title="QuickViewFile" Height="720" Width="1280">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="14" ResizeBorderThickness="4" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <helpers:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
        <helpers:ScrollBarsVisibilityConverter x:Key="ScrollBarsVisibilityConverter"/>
        <Style TargetType="ListViewItem">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="Background" Value="Gray"/>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="#FF252525">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Name="DockNavigationPanel" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Grid.Row="0" VerticalAlignment="Top" Background="Transparent">
            <TextBlock
                  Text="{Binding SelectedItem.FullPath}"
                  FontWeight="Bold"
                  Name="FileFullPathTextBlock"
                  FontSize="12.5"
                  Margin="0,3,0,0"
                  Padding="10,10,10,10"
                  TextWrapping="NoWrap"
                  Foreground="WhiteSmoke"/>
            <StackPanel HorizontalAlignment="Right" Background="Transparent" Opacity="1" Orientation="Horizontal" Grid.Row="0" DockPanel.Dock="Right" Margin="10" UseLayoutRounding="True">
                <Button Content="—" Width="40" Click="Minimize_Click"/>
                <Button Content="▢" Width="40" Click="Maximize_Click"/>
                <Button Content="X" Width="40" Background="Red" Foreground="White" Click="Close_Click"/>
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListView Grid.Column="0"
                  x:Name="FilesListView"
                  SelectionMode="Single"
                  ItemsSource="{Binding ActiveListItems}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  MouseDoubleClick="FilesListView_MouseDoubleClick"
                  Margin="10"
                  KeyDown="AppWindow_KeyDown"
                  Focusable="True"
                  TabIndex="0"
                  Foreground="#FFF4B900"
                  Background="#FF646464"
                  ScrollViewer.CanContentScroll="True" BorderBrush="Transparent" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Size (KB)" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Size}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <GridSplitter Grid.Column="1"
                      Width="3"
                      Background="Gray"
                      Name="MainWindowGridSplitter"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Focusable="False"/>
            <Border Name="ContentBorder" Grid.Column="2" BorderBrush="Transparent" BorderThickness="1" Margin="1">
                <Grid KeyDown="AppWindow_KeyDown"
                  MouseRightButtonDown="Grid_MouseRightButtonDown"
                  Height="Auto"
                  Width="Auto"
                  Background="#FF252525">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- File content: Image, Video or Text-->
                    <Grid Grid.Row="1" Width="Auto" Background="Transparent">

                        <local:VideoPlayerControl
                            KeyDown="AppWindow_KeyDown"
                            Focusable="False"
                            x:Name="VideoMedia"
                            Content="{Binding SelectedItem.FileContentModel.VideoMedia}"
                            Visibility="{Binding SelectedItem.FileContentModel.VideoMedia, Converter={StaticResource NullToCollapsedConverter}}" />


                        <Grid Focusable="False"
                             Background="Transparent"
                             Visibility="{Binding SelectedItem.FileContentModel.ImageSource, Converter={StaticResource NullToCollapsedConverter}}"
                             ClipToBounds="True">
                            <local:ZoomableImage
                                Source="{Binding SelectedItem.FileContentModel.ImageSource}"
                                VerticalAlignment="Center"
                                Stretch="Uniform"
                                x:Name="ZoomableImageElement"
                                Height="Auto"
                                Width="Auto"
                                HorizontalAlignment="Center"
                                RenderOptions.BitmapScalingMode="{Binding Config.BitmapScalingMode}"
                                Visibility="{Binding SelectedItem.FileContentModel.ImageSource, Converter={StaticResource NullToCollapsedConverter}}"
                                ClipToBounds="True"/>
                        </Grid>


                        <TextBox FontFamily="Consolas"
                                 SpellCheck.IsEnabled="False"
                                 IsReadOnly="False"
                                 KeyDown="AppWindow_KeyDown"
                                 Name="TextBoxTextContent"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 Focusable="True"
                                 Margin="10"
                                 Background="#FF252525"
                                 Foreground="White"
                                 ClipToBounds="True"
                                 Visibility="{Binding SelectedItem.FileContentModel.ShowTextBox, Converter={StaticResource BoolToVisibilityConverter}}"
                                 FontSize="{Binding Config.FontSize}"
                                 Text="{Binding SelectedItem.FileContentModel.TextContent, Mode=OneWay}"
                                 TextWrapping="{Binding Config.TextPreviewWordWrap}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>